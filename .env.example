# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (Required)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
# Path to SQLite database file
DATABASE_PATH=TESTDatabase.db

# Environment
# Set to "development" for debug mode, "production" for live deployment
ENVIRONMENT=development

# Logging Configuration  
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Rate Limiting (Optional - defaults used if not set)
# MAX_VERIFICATION_ATTEMPTS=5
# RATE_LIMIT_WINDOW_SECONDS=1800

# RSI Organization Configuration (Optional - uses config.yaml if not set)
# RSI_ORG_NAME="TEST Squadron - Best Squardon!"

# Voice Channel Settings (Optional)
# VOICE_COOLDOWN_SECONDS=5
# VOICE_EXPIRY_DAYS=30

# External Service Configuration (Optional)
# HTTP_TIMEOUT_SECONDS=30
# HTTP_MAX_RETRIES=3

# Test Configuration (Test environment only)
# TESTBOT_DRY_RUN=1  # Set to 1 to enable dry run mode for testing
